{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react-native",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    //   "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "outDir": "dist/layers",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "paths": {
      "@/*": ["./Example/src/*"],
      "@assets/*": ["./Example/src/shared/assets/*"],
      "@constants/*": ["./Example/src/shared/constants/*"],
    },
  },
  "include": [
    "Example/src/entities",
    "Example/src/features",
    "Example/src/shared",
    "Example/src/widgets"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}